@{
    ViewBag.Title = "Admin Panel";
    Layout = "_Layout2";
}

<link href="~/css/site.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Vazir', sans-serif;
    }

    .sidebar {
        height: 100vh;
        position: fixed;
        top: 0;
        right: 0;
        width: 250px;
        background-color: #343a40;
        color: white;
        padding-top: 20px;
    }
    .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 20px;
        }
    .sidebar a:hover {
                background-color: #495057;
            }

    .content {
        margin-right: 150px;
        margin-left: 50px;
        padding: 20px;
    }
